<div class="container">
  {{#if addNewQuestion}}
    <h1>New Question</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="ask"> New Question</label>
            {{input value=ask id="ask"}}
          </div>

          <div class="form-group">
            <label for="author">Author</label>
            {{input value=author id="author"}}
          </div>

          <div class="form-group">
            <label for="note">Notes</label>
            {{input value=note id="note"}}
          </div>


          <button class="btn btn-warning"  {{action 'saveQuestion'}}>Save</button>
        </form>
      </div>
  {{else}}
    <button class="btn btn-warning" {{action 'showQuestionForm'}}>Ask New Question</button>
  {{/if}}
</div>
