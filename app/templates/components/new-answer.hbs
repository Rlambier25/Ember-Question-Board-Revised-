<div class="">
  {{#if addNewAnswer}}
    <h1>New Answer</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="answer">Answer:</label>
            {{input value=answer id="answer"}}
          </div>

          <div class="form-group">
            <label for="author">Author:</label>
            {{input value=author id="author"}}
          </div>

          <button class="btn btn-success" {{action 'saveAnswer'}}>Save</button>
        </form>
      </div>
  {{else}}
      <button type="button" class="btn btn-success" {{action 'answerFormShow'}}>New Answer</button>
  {{/if}}
</div>
